{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/types": ["src/types"],
      "@/seed": ["src/seed"],
      "@/storage": ["src/storage"],
      "@/state": ["src/state"],
      "@/utils": ["src/utils"],
      "@/hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src"]
}

